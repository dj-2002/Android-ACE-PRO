<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="superMaterialThemeNight">
        <!--    Customise for only lollipop and above versions features. -->
    </style>

    <style name="ButtonColorNight" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/btnTextColorNight</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BottamBarTheme" parent="superMaterialThemeNight">
        <item name="android:background">@color/colorPrimaryNight</item>
        <item name="backgroundTint">@color/colorPrimaryNight</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="superMaterialThemeNight" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorOnPrimary">@color/colorAccentNight</item>

        <!--        can be used in tab layout background-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkNight</item>

<!--        <item name="android:buttonStyle">@style/ButtonColorNight</item>-->
<!--        <item name="colorButtonNormal">@color/colorBtnNight</item>-->

        <!--        <item name="navigationIconTint">@color/colorAccentNight</item>-->

        <!-- Secondary brand color. -->
        <!--         can be used anywhere fro ?attr reference -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkNight</item>
        <item name="colorOnSecondary">@color/colorAccentNight</item>

        <!--    Customise for only lollipop and above versions features. -->
        <item name="colorAccent">@color/colorAccentNight</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>


        <!--        it set color in overflow menu of action bar icon -->
        <item name="iconTint">@color/colorAccentNight</item>

        <!--        it set color in our app for bottom nav icon tint and popup menu icon tint-->
        <item name="android:tint">@color/colorAccentNight</item>

        <!--        TODO : item icon tint can use in our application in navigation drawer icon color-->
        <item name="itemIconTint">@color/colorAccentNight</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MyActionModeNight</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="MyActionModeNight" parent="@style/Widget.AppCompat.ActionMode">

        <item name="background">@color/contextualBackgroundNight</item>
